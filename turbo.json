{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".astro/**"]
    },
    "test": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "@apps/next-app#dev": {
      "cache": false,
      "persistent": true
    },
    "@apps/next-app#build": {
      "cache": false,
      "outputs": [],
      "env": ["NODE_ENV", "SITE_URL"]
    },
    "@apps/next-app#sync": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "format": {},
    "check-types": {}
  },
  "globalDependencies": ["**/.env.*"]
}
