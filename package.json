{
  "name": "turborepo-starter",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "dev:next-app": "turbo run @apps/next-app#dev",
    "build:next-app": "turbo run @apps/next-app#build",
    "sync:next-app": "turbo run @apps/next-app#sync",
    "manypkg:check": "manypkg check",
    "manypkg:fix": "manypkg fix",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "turbo run format",
    "check-types": "turbo run check-types",
    "clean:dry-run": "./scripts/clean.sh all --dry-run",
    "clean": "./scripts/clean.sh all"
  },
  "devDependencies": {
    "@manypkg/cli": "^0.21.4",
    "@repo/eslint-config": "*",
    "@repo/prettier-config": "*",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "turbo": "^2.1.3"
  },
  "resolutions": {
    "sharp": "0.32.6"
  },
  "packageManager": "yarn@1.22.22",
  "engines": {
    "node": ">=22.9.0"
  }
}
